<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="412dp"
        android:layout_height="80dp"
        android:background="@color/gris"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            app:srcCompat="@drawable/icono"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="160dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="425dp"
        android:layout_height="719dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/grisFondo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/salarioMensual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Ingrese su Salario Mensual"
            android:inputType="number"
            android:padding="10dp"
            android:text="" />

        <EditText
            android:id="@+id/ingresosExt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Ingresos extras mensuales"
            android:inputType="number"
            android:padding="10dp"
            android:text="" />

        <EditText
            android:id="@+id/gastosMens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="Gastos Mensuales"
            android:inputType="number"
            android:padding="10dp"
            android:text="" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Dinero que puedes ahorrar" />

        <TextView
            android:id="@+id/respuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:background="@color/white"
            android:gravity="center"
            android:inputType="number"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/rojo"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="@color/rojo"
            android:padding="10px"
            android:text="calcular"
            android:textSize="20dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>