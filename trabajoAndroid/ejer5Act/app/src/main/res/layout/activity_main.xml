<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="264dp"
        android:layout_height="189dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="384dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/iptHoras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/whiteO"
            android:gravity="center"
            android:hint="Ingrese las horas laboradas"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:inputType="number"/>

        <EditText
            android:id="@+id/iptValorHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/whiteO"
            android:gravity="center"
            android:hint="Ingrese elvalor de la hora"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:inputType="number"/>

        <EditText
            android:id="@+id/iptTiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/whiteO"
            android:gravity="center"
            android:hint="Numero de aÃ±os laborados"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:inputType="number"/>

        <EditText
            android:id="@+id/iptDeduccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/whiteO"
            android:gravity="center"
            android:hint="Ingrese deduccion mensual"
            android:padding="5dp"
            android:textColorHint="@color/white"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="64dp"
        android:layout_height="63dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="315dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:backgroundTint="@color/azul"
            app:srcCompat="@android:drawable/ic_popup_sync" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="191dp"
        android:layout_marginTop="125dp"
        android:background="@color/whiteO"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/salarioBruto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/valBonificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/valDeduccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/salarioNeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>